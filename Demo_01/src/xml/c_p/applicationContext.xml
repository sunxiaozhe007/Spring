<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                            http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean   id="person" class="xml.c_p.Person"
            p:pname="sunxiaozhe" p:age="22" p:homeAddress-ref="homeAddress" p:companyAddress-ref="companyAddress">
    </bean>

    <bean id="homeAddress" class="xml.c_p.Address"
            p:address="baoji" p:tel="111">

    </bean>

    <bean id="companyAddress" class="xml.c_p.Address"
            p:address="xian" p:tel="222">

    </bean>
</beans>